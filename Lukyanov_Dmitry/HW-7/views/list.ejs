<html lang="ru">

<head>
    <% include style %>
</head>

<body>
    <main>

        <div class="container">
            <row>
                <form class="form-inline" action="/profile" method="GET">
                    <button type="submit" class="btn btn-primary mb-2">Профиль пользователя</button>
                </form>

                <h3 class="text-left">Список дел</h3>
                <form class="form-inline" action="/add-todo" method="POST">
                    <div class="form-group mx-sm-3 mb-2">
                        <input type="text" class="form-control" name="item" placeholder="Добавить дело">
                    </div>
                    <button type="submit" class="btn btn-primary mb-2">Добавить</button>
                </form>
            </row>
            <div class="row">
                <ol class="form-group mx-sm-3 mb-2">
                    <% for(var i = 0; i < allList.length; i++) { %>
                    <li>
                        <form action="/del-todo" method="POST">
                            <%= allList[i].name %>
                            <button name="id" value="<%= allList[i].id %>" type="submit" class="btn btn-primary mb-2">-</button>
                        </form>
                        <form action="/done" method="POST">
                                <button type="submit" class="btn btn-primary mb-2" value=" <%= allList[i].id %>" name="complite">Выполненно</button>
                            </form>
                    </li>
                    <% }
                        %>
                </ol>
            </div>
            </form>
        </div>
        </div>
    </main>
</body>

</html>